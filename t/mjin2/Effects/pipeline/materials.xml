<compositor>
    <texture name="cubemap" type="cubemap">
        <wrap param="s">repeat</wrap>
        <wrap param="t">repeat</wrap>
        <filter param="min_filter">linear_mipmap_linear</filter>
        <filter param="mag_filter">linear</filter>
        <file index="0">cubemap/posx.jpg</file>
        <file index="1">cubemap/negx.jpg</file>
        <file index="2">cubemap/posy.jpg</file>
        <file index="3">cubemap/negy.jpg</file>
        <file index="4">cubemap/posz.jpg</file>
        <file index="5">cubemap/negz.jpg</file>
    </texture>
    <!-- defaults begin -->
    <texture name="noGlow" template="textureTemplate">
        <file>noglow.png</file>
    </texture>
    <texture name="noise" template="textureTemplate">
        <file>noise_tex.jpg</file>
    </texture>
    <!-- defaults end -->
    <texture name="bump" template="textureTemplate">
        <file>bump_tex.jpg</file>
    </texture>
    <texture name="glow" template="textureTemplate">
        <file>glow_tex.png</file>
    </texture>
    <texture name="glow2" template="textureTemplate">
        <file>glow2_tex.png</file>
    </texture>
    <texture name="reflectionMask" template="textureTemplate">
        <file>reflection_mask.png</file>
    </texture>
    <texture name="reflectionGlow" template="textureTemplate">
        <file>reflection_glow.png</file>
    </texture>
    <!-- This simply uses the pipeline defaults -->
    <material name="plainSurface">
    </material>
    <material name="bumpySurface">
        <texture unit="1" varname="bumpMap">bump</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="crawlingPlainSurface">
        <uniform name="crawlDiffMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="crawlingBumpySurface">
        <texture unit="1" varname="bumpMap">bump</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="crawlBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="crawlDiffMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="bumpyGlowingSurface">
        <texture unit="1" varname="bumpMap">bump</texture>
        <texture unit="2" varname="glowMap">glow</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="useGlowMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="bumpyGlowing2Surface">
        <texture unit="1" varname="bumpMap">bump</texture>
        <texture unit="2" varname="glowMap">glow2</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="useGlowMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="cubemapped">
        <texture unit="1" varname="bumpMap">bump</texture>
        <texture unit="2" varname="glowMap">reflectionGlow</texture>
        <texture unit="4" varname="cubeMapMask">reflectionMask</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="useCubeMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="useGlowMap" type="int">
            <value>1</value>
        </uniform>
    </material>
</compositor>
