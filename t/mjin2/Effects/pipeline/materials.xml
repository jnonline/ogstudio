<compositor>
    <!-- This simply uses the pipeline defaults -->
    <material name="plainSurface">
    </material>
    <material name="bumpySurface">
        <texture unit="1" varname="bumpMap">bump</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="crawlingPlainSurface">
        <uniform name="crawlDiffMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="crawlingBumpySurface">
        <texture unit="1" varname="bumpMap">bump</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="crawlBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="crawlDiffMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="bumpyGlowingSurface">
        <texture unit="1" varname="bumpMap">bump</texture>
        <texture unit="2" varname="glowMap">glow</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="useGlowMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="bumpyGlowing2Surface">
        <texture unit="1" varname="bumpMap">bump</texture>
        <texture unit="2" varname="glowMap">glow2</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="useGlowMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="cubemapped">
        <texture unit="1" varname="bumpMap">bump</texture>
        <texture unit="2" varname="glowMap">reflectionGlow</texture>
        <texture unit="4" varname="cubeMapMask">reflectionMask</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="useCubeMap" type="int">
            <value>1</value>
        </uniform>
        <uniform name="useGlowMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="floorSurface">
        <texture unit="0" varname="diffMap">floorDiffuse</texture>
        <texture unit="1" varname="bumpMap">floorNormal</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="wallSurface">
        <texture unit="0" varname="diffMap">wallDiffuse</texture>
        <texture unit="1" varname="bumpMap">wallNormal</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="roofSurface">
        <texture unit="1" varname="bumpMap">roofNormal</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
    </material>
    <material name="columnSurface">
        <texture unit="1" varname="bumpMap">columnNormal</texture>
        <uniform name="useBumpMap" type="int">
            <value>1</value>
        </uniform>
    </material>
</compositor>
